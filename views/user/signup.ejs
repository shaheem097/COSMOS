<%- include('../partials/user-header') %>


    <div class="container  py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-6">
                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5 ">
                    <div class="padding_eight_all bg-white ">
                        <div class="heading_s1">
                            <h3 class="mb-30">Create an Account</h3>
                        </div>
                        <p class="mb-50 font-sm">
                            Your personal data will be used to support your experience throughout this website, to
                            manage access to your account, and for other purposes described in our privacy policy
                        </p>
                        <% if (locals.exemail) { %>
                            <p class="text-danger">Email already exists</p>
                            <% } %>

                                <% if (locals.exphone) { %>
                                    <p class="text-danger">Phone Number already exists</p>
                                    <% } %>




                                        <form action="/signup_submit" method="post">
                                            <div class="form-group">
                                                <input type="text" id="uname" name="uname" placeholder="Username"
                                                    required>
                                                <label id="err" style="color:rgb(189, 1, 1);display:none;">Username
                                                    should only contain a-z/A-Z</label>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" name="email" placeholder="Email" required
                                                    id="email">
                                            </div>
                                            <div class="form-group">
                                                <input type="text" id="phone" name="phone" placeholder="Phone Number"
                                                    required>
                                                <label id="perr" style="color:rgb(189, 1, 1);display:none;">Invalid
                                                    Phone Number</label>

                                            </div>
                                            <div class="form-group">
                                                <input type="password" id="pass1" name="password" placeholder="Password"
                                                    required>
                                                <label id="err1" style="color:rgb(189, 1, 1);display:none;">Password is
                                                    too short</label>

                                            </div>
                                            <div class="form-group">
                                                <input type="password" id="pass2" name="password1"
                                                    placeholder="Confirm password" required>
                                                <label id="err2" style="color:rgb(189, 1, 1);display:none;">Password
                                                    doesn't match</label>

                                            </div>
                                            <div class="login_footer form-group">
                                                <div class="chek-form">
                                                    <div class="custome-checkbox">
                                                        <input class="form-check-input" type="checkbox" name="checkbox"
                                                            id="exampleCheckbox12" value="" required>
                                                        <label class="form-check-label" for="exampleCheckbox12"><span>I
                                                                agree to terms &amp; Policy.</span></label>
                                                        <label id="errcheck"
                                                            style="color:rgb(189, 1, 1);display:none;">Please check the
                                                            above box</label>

                                                    </div>
                                                </div>
                                                <a href="page-privacy-policy.html"><i
                                                        class="fi-rs-book-alt mr-5 text-muted"></i>Lean more</a>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up"
                                                    id="btn">Submit &amp; Register</button>
                                            </div>
                                        </form>

                                        <div class="text-muted text-center">Already have an account? <a
                                                href="/login">Login now</a></div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <script>


        //valid uname
        document.getElementById('uname').onkeyup = () => {




            let uname = document.getElementById('uname').value
            document.getElementById('uname').value = uname.trim()

            if (!uname.match(/^[a-zA-Z]+$/)) {
                document.getElementById("err").style.display = "block"
            }
            else {
                document.getElementById("err").style.display = "none"

            }
        }

        //valid phone

        document.getElementById('phone').onkeyup = () => {

            let phone = document.getElementById('phone').value

            if (phone.length != 10) {
                document.getElementById('perr').style.display = "block"
            }
            else {
                document.getElementById('perr').style.display = "none"

            }
        }

        //password

        document.getElementById('pass1').onkeyup = () => {
            let pass = document.getElementById('pass1').value

            if (pass.length < 8) {
                document.getElementById("err1").style.display = "block"

            }
            else {
                document.getElementById("err1").style.display = "none"
            }
        }

        document.getElementById('pass2').onkeyup = () => {
            let pass1 = document.getElementById('pass1').value
            let pass2 = document.getElementById('pass2').value

            if (pass1 != pass2) {

                document.getElementById("err2").style.display = "block"

            }
            else {
                document.getElementById("err2").style.display = "none"

            }


        }

        //submit button
        document.getElementById('btn').onclick = () => {



            if (exampleCheckbox12.checked) {
                document.getElementById('errcheck').style.display = "none"
            }
            else {
                document.getElementById('errcheck').style.display = "block"
            }

            let phone = document.getElementById('phone').value
            document.getElementById('phone').value = phone.trim()

            if (phone.length != 10) {
                document.getElementById('phone').value = ""
            }
            else if (isNaN(phone)) {
                document.getElementById('phone').value = ""

            }


            if (pass1 != pass2) {
                document.getElementById('pass2').value = ""
            }


        }

        document.getElementById('email').onkeyup = () => {

            let email = document.getElementById('email').value
            document.getElementById('email').value = email.trim()

        }

        let pass1 = document.getElementById('pass1').value
        let pass2 = document.getElementById('pass2').value

