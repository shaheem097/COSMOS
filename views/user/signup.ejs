    // document.getElementById('pass1').value = pass1.trim()
    // }

//     document.getElementById('pass2').onkeyup = ()=>{

//     document.getElementById('pass2').value = pass2.trim()
// }



    </script>

    <%- include('../partials/user-footer') %>