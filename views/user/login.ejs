                      <form action="/login" method="post">
                        <div class="form-group">
                          <input type="" required="" name="email" placeholder="Your Email/Mobile Number" />
                        </div>
                        <div class="form-group">
                          <input required="" type="password" name="password" placeholder="Password" />
                        </div>
                        <div class="login_footer form-group">
                          <div class="chek-form">
                            <div class="custome-checkbox">
                              <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox1"
                                value="" />
                              <label class="form-check-label" for="exampleCheckbox1"><span>Remember me</span></label>
                            </div>
                          </div>
                          <a class="text-muted" href="#">Forgot password?</a>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login"
                            style="width: 100%">
                            Log in
                          </button>
                        </div>
                        <div>
                          <p class="mb-3 text-center text-success">OR</p>
                        </div>
                        <div class="form-group">
                          <a href="/otplogin-page" class="btn btn-warning w-100" style="background-color: #205057;">OTP
                            Login</a>
                        </div>
                        <div>
                          <a class="ms-5" href="/signup">New ? Create An Account</a>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
